  {
    "id": "urn:ngsi-ld:entity:E3",
    "type": "T",
    "P2": {
      "type": "Property",
      "value": "STEP 05",
      "P15": {
        "type": "Property",
        "value": "STEP 05"
      }
    },
    "P3": {
      "type": "Property",
      "value": "STEP 05",
      "P35": {
        "type": "Property",
        "value": "STEP 05"
      }
    },
    "R3": {
      "type": "Relationship",
      "object": "urn:E3:R3:step5",
      "P15": {
        "type": "Property",
        "value": "STEP 05"
      }
    }
  },
  {
    "id": "urn:ngsi-ld:entity:E4",
    "type": "T",
    "P2": {
      "type": "Property",
      "value": "STEP 05",
      "P15": {
        "type": "Property",
        "value": "STEP 05"
      }
    },
    "P3": {
      "type": "Property",
      "value": "STEP 05",
      "P35": {
        "type": "Property",
        "value": "STEP 05"
      }
    },
    "R3": {
      "type": "Relationship",
      "object": "urn:E4:R3:step5",
      "P15": {
        "type": "Property",
        "value": "STEP 05"
      }
    }
  }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/upsert?options=update --payload "$payload"
echo
echo


echo "06. GET entities, see the new E4 and E1+E2+E3 with P3 and R3 new step 05, while P2 has been replaced with what's in step 05"
echo "==========================================================================================================================="
orionCurl --url /ngsi-ld/v1/entities?type=T
echo
echo


