# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
PATCH Entity and Notifications

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255
accumulatorStart --pretty-print 127.0.0.1 ${LISTENER_PORT}

--SHELL--

#
# 01. Create an entity E1 with two attributes P1 and R1
# 02. Create a subscription S1 for E1:P1, on attribute P1
# 03. Update E1:P1
# 04. Dump accumulator, see one notification
# 05. Update E1:R1
# 06. Dump accumulator, see no notifications
# 07. GET E1, see new values both for P1 and R1

echo "01. Create an entity E1 with two attributes P1 and R1"
echo "====================================================="
payload='{
  "id": "urn:ngsi-ld:entities:E1",
  "type": "T",
  "P1": {
    "type": "Property",
    "value": 1
  },
  "R1": {
    "type": "Relationship",
    "object": "urn:ngsi-ld:attributes:R1"
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. Create a subscription S1 for E1:P1, on attribute P1"
echo "======================================================="
payload='{
  "id": "urn:ngsi-ld:subscriptions:S1",
  "type": "Subscription",
  "name": "S1",
  "entities": [
    {
      "id": "urn:ngsi-ld:entities:E1",
      "type": "T"
    }
  ],
  "watchedAttributes": [ "P1" ],
  "q": "P2>2",
  "notification": {
    "attributes": [ "P1" ],
    "format": "normalized",
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "accept": "application/json"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "03. Update E1:P1"
echo "================"
payload='{
  "P1": {
    "type": "Property",
    "value": 3
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "04. Dump accumulator, see one notification"
echo "=========================================="
sleep .1
accumulatorDump
accumulatorReset
echo
echo


echo "05. Update E1:R1"
echo "================"
payload='{
  "R1": {
    "type": "Relationship",
    "object": "urn:ngsi-ld:hattributes:R1"
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "06. Dump accumulator, see no notifications"
echo "=========================================="
sleep .1
accumulatorDump
echo
echo


echo "07. GET E1, see new values both for P1 and R1"
echo "============================================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1
echo
echo


--REGEXPECT--
01. Create an entity E1 with two attributes P1 and R1
=====================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1
Date: REGEX(.*)



02. Create a subscription S1 for E1:P1, on attribute P1
=======================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/subscriptions/urn:ngsi-ld:subscriptions:S1
Date: REGEX(.*)



03. Update E1:P1
================
HTTP/1.1 204 No Content
Content-Length: 0
Date: REGEX(.*)



04. Dump accumulator, see one notification
==========================================
POST http://127.0.0.1:9997/notify
Content-Length: 268
User-Agent: orionld
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Content-Type: application/json

{
    "data": [
        {
            "P1": {
                "type": "Property", 
                "value": 3
            }, 
            "id": "urn:ngsi-ld:entities:E1", 
            "type": "T"
        }
    ], 
    "id": "urn:ngsi-ld:Notification:REGEX(.*)", 
    "notifiedAt": "202REGEX(.*)", 
    "subscriptionId": "urn:ngsi-ld:subscriptions:S1", 
    "type": "Notification"
}
=======================================


05. Update E1:R1
================
HTTP/1.1 204 No Content
Content-Length: 0
Date: REGEX(.*)



06. Dump accumulator, see no notifications
==========================================


07. GET E1, see new values both for P1 and R1
=============================================
HTTP/1.1 200 OK
Content-Length: 145
Content-Type: application/json
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "P1": {
        "type": "Property",
        "value": 3
    },
    "R1": {
        "object": "urn:ngsi-ld:hattributes:R1",
        "type": "Relationship"
    },
    "id": "urn:ngsi-ld:entities:E1",
    "type": "T"
}


--TEARDOWN--
brokerStop CB
accumulatorStop
dbDrop CB
