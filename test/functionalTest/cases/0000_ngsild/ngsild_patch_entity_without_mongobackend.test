# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Update an entity attribute using PATCH

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255

--SHELL--
#
# 01. Create an entity E1 with attributes A1 and A2
# 02. Patch E1:A1 - get 204
# 03. Patch E1:A1, and non-existent E1:A3 - get 207 and A3 in 'notUpdated'
#

echo "01. Create an entity E1 with attributes A1 and A2"
echo "================================================="
payload='{
  "id": "urn:ngsi-ld:entity:E1",
  "type": "T",
  "A1": {
    "type": "Property",
    "value": "Attribute 1"
  },
  "A2": {
    "type": "Property",
    "value": "Attribute 2"
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload"
echo
echo


echo "02. Patch E1:A1 - get 204"
echo "========================="
payload='{
  "A1": {
    "type": "Property",
    "value": "A1 from step 02"
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entity:E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "03. Patch E1:A1, and non-existent E1:A3 - get 207 and A3 in 'notUpdated'"
echo "========================================================================"
payload='{
  "A1": {
    "type": "Property",
    "value": "A1 from step 03"
  },
  "A3": {
    "type": "Property",
    "value": "A3 from step 03"
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entity:E1/attrs -X PATCH --payload "$payload"
echo
echo


--REGEXPECT--
01. Create an entity E1 with attributes A1 and A2
=================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:entity:E1
Date: REGEX(.*)



02. Patch E1:A1 - get 204
=========================
HTTP/1.1 204 No Content
Content-Length: 0
Date: REGEX(.*)



03. Patch E1:A1, and non-existent E1:A3 - get 207 and A3 in 'notUpdated'
========================================================================
HTTP/1.1 207 Multi Status
Content-Length: 110
Content-Type: application/json
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "notUpdated": [
        {
            "attributeName": "A3",
            "reason": "attribute doesn't exist in original entity"
        }
    ],
    "updated": [
        "A1"
    ]
}


--TEARDOWN--
brokerStop CB
dbDrop CB
